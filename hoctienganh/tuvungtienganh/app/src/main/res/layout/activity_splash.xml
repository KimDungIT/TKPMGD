<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

xmlns:tools="http://schemas.android.com/tools"
tools:context=".activity.SplashActivity"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:padding="20dp"
    android:textSize="20sp"
    android:text="Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<LinearLayout

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView

        android:layout_marginLeft="20dp"
        android:layout_width="60dp"
        android:layout_height="65dp"

        android:src="@drawable/icon_avatar" />


</LinearLayout>
<LinearLayout
    android:layout_marginTop="40dp"
    android:background="@drawable/state_default"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black">

    <TextView
        android:textStyle="bold"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="TÌNH HÌNH HỌC TẬP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/bookicon"
            android:layout_width="49dp"
            android:layout_height="43dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="Bài học hiện tại: 3"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <SeekBar
                android:progress="40"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/pencel"
            android:layout_width="49dp"
            android:layout_height="43dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="Số từ vựng đã học: 10"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <SeekBar
                android:progress="20"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/chat"
            android:layout_width="100dp"
            android:layout_height="150dp" />

        <ImageView

            android:src="@drawable/output"
            android:layout_width="170dp"
            android:layout_height="300dp" />


    </LinearLayout>



</LinearLayout>